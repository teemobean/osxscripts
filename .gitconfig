[user]
	name = timngmsft
	email = timngmsft@hotmail.com
[core]
  autocrlf = false
  editor = vim
  excludesfile = ~/.config/git/gitignore
  pager = diff-so-fancy | less --tabs=4 -RFX
[alias]
  co = checkout
  cob = checkout -b
  cm = commit -m
  bv = branch -vv

# [url "ssh://git@github.securesever.net/"]
# 	insteadOf = https://github.secureserver.net/
[pull]
	rebase = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
